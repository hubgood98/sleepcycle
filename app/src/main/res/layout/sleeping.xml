<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg2"
    tools:context=".sleeping">

    <TextView
        android:layout_margin="5dp"
        android:id="@+id/db_display"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0dB"
        android:textSize="20dp"
        android:textColor="@color/white"/>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_margin="3dp"
            android:id="@+id/crn_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="00 : 00"
            android:textSize="50dp"
            android:textStyle="bold"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/am_pm"
            android:layout_margin="3dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:text="오전"
            android:textSize="25dp"
            android:textStyle="bold"
            android:textColor="@color/white"/>
    </LinearLayout>


    <TextView
        android:id="@+id/crn_day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:text="7,Dec"
        android:textColor="@color/white"
        android:textSize="40sp"
        android:textStyle="bold" />

    <com.student.sleepcycle.SoundVisualizerView
        android:id="@+id/soundVisualizerView"
        android:layout_width="wrap_content"
        android:layout_height="192dp"
        android:layout_marginBottom="10dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/resetButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="30dp"
            android:text="RESET" />

        <com.student.sleepcycle.RecordButton
            android:id="@+id/recordButton"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:padding="25dp"
            android:scaleType="fitCenter"
            tools:ignore="SpeakableTextPresentCheck"
            tools:src="@drawable/ic_recorde" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/dark_naby"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/getup_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:text="기상 시간"/>

    </LinearLayout>


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/fin_sleep"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="15dp"
        android:text="기상 확인"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:background="@color/black" />

    <TextView
        android:id="@+id/s_val"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:text="수면중 값"/>

</LinearLayout>